{
  "manifest_version": 2,
  "name": "Wide GoDoc",
  "author": "ramenjuniti",
  "description": "Dynamically expand the width of GoDoc",
  "version": "0.0.1",
  "homepage_url": "https://github.com/ramenjuniti/wide-godoc",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "Wide GoDoc",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://godoc.org/*",
        "*://pkg.go.dev/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "contentScript.css"
      ]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}